# Java API Configuration
JAVA_API_BASE_URL=http://localhost:8080
JAVA_API_KEY=your-api-key-here
JAVA_API_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF_FACTOR=2.0

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC
REMINDER_CHECK_INTERVAL=3600

# Reminder Configuration
REMINDER_BATCH_SIZE=100
ENABLE_EMAIL_REMINDERS=true
ENABLE_WHATSAPP_REMINDERS=true

# Email Configuration (Optional - if sending emails directly)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@paymentrecovery.com

# WhatsApp Configuration (Optional - if sending WhatsApp directly)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your-whatsapp-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development

